@import url('https://fonts.googleapis.com/css?family=Open+Sans');

html,body{
		background:#FFF;
		font-family: 'Open Sans', sans-serif;
		color: $black;
}

div#app {
	width:70%;
	max-width:1100px;
	margin:5% auto;
}


h1.banner {
  font-size: $fontsize_huge
}

.section {
    padding:40px 40px;
		border-top: 1px solid #CCC;
}

.dark {
		background-color:$gray;
}

.center {
	text-align:center;
}

.row {
  clear: both; 
}

.col-3 {
	width:33%;
	float:left;
}

.col-2 {
  width:50%;
  float:left;
}

.clear {
  clear:both
}

.btn {
	cursor:pointer;
  border-radius: 4px;
  padding:10px 20px;
	text-transform:uppercase;
  text-decoration:none;
}

.btn-blue {
	color:$white;
	background-color:$blue;
}

.btn-big {
	font-size:30px;
}
